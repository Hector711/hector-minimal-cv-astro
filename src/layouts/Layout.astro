---
// Supports weights 100-900
import "@fontsource-variable/onest";
import Options from "../components/sections/Options.astro";
interface Props {
  title: string;
}


const { title } = Astro.props;

const { currentLocale } = Astro
console.log({currentLocale})
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body> 
    <Options />
    <slot />
  </body>
</html>

<!--  ESTILOS  -->
<style is:global>
  @import url("../variables.css");

  * {
  }

  html {
    font-family: "Onest Variable", BlinkMacSystemFont, "Segoe UI", Roboto,
      Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
    background-color: var(--softWhite);
    letter-spacing: -0.0005rem;
  }

  main {
    padding-inline: 4rem;
    padding-block: 4rem;
    margin: auto;
    width: 100%;
  }

  body,
  figure {
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
    color: var(--darkGrey);
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;

    color: var(--black);
  }

  h3 {
    font-weight: 600;
  }

  p {
    color: var(--softGrey);
    font-size: 1rem;
    line-height: 1.4;
    margin: 0;
    text-wrap: pretty;
    word-wrap: break-word;
  }

  @media print {
    #no-print {
      display: none;
    }
  }

  #print {
    display: none !important;
    font-size: 0.9rem;
    color: var(--softGrey);
  }

  #arrow {
    color: var(--black);
  }

  @media print {
    #print {
      display: block !important;
    }
    html {
      background-color: var(--totalWhite) !important;
    }
    p,
    span,
    h2,
    time {
      color: var(--darkGrey) !important;
    }
    article p {
      width: 550px !important;
    }
  }

  @media screen and (max-width: 670px) {
    main {
      padding-inline: 2rem;
      padding-block: 3rem;
    }
    #arrow {
      display: flex;
      justify-content: start;
      align-items: start;
      padding-top: 4px;
    }
  }


</style>
