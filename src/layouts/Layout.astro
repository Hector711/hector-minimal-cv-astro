---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<!--  ESTILOS  -->
<style is:global>
  @import url('../variables.css');
  
  * { 
    /* border: 0.5px solid black; */
    box-sizing: border-box;
  }
  
  html {
    font-family:
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif
      ;
    /* background-color: var(--softWhite); */
    letter-spacing: -0.0005rem;
  }

  main {
    padding: 4rem;
    margin: auto;
    width: 100%;
  }


  body,
  figure {
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
    color: var(--darkGrey);
  }





  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;

    color: var(--black)
  }

  p {
    color: var(--softGrey);
    font-size: 1rem;
    line-height: 1.4;
    margin: 0;
    text-wrap: pretty;
    word-wrap: break-word;
    
  }
  
  
  @media print {
    #no-print {
      display: none;
    }
  }

  #print {
    display: none !important;
  }

  @media print {
    #print {
      display: block !important;
    }
    html {
      background-color: var(--totalWhite) !important;
    }
  }
</style>
