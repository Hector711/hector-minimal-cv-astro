---
const { title } = Astro.props

---

<section>
  <!-- si tiene un title vamos a pintar un h2 con el mismo -->
  {title && <h2>{title}</h2>}

  <!-- sirve para renderizar lo que va a salir el interior  -->
  <slot />
</section>

<style>
  section {
    max-width: 700px;
    margin:0 auto 72px;
  }

  h2 {
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.5rem;
  }
</style>