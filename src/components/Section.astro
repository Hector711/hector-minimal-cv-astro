---
const { title } = Astro.props

---

<section>
  <!-- si tiene un title vamos a pintar un h2 con el mismo -->
  {title && <h2>{title}</h2>}

  <!-- slot es para renderizar el interior  -->
  <slot />
</section>

<style>
  section {
    max-width: 700px;
    margin: 0 auto 40px;
  }
  h2 {
    margin-bottom: 10px;
    line-height: 1.5;
    font-weight: 700;
    font-size: 1.5rem;
    /* text-transform: uppercase; */
  }

</style>