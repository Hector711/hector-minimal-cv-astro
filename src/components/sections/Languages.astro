---
import Section from "../Section.astro";

import { languages } from "../../../cv-es.json";
---

<Section title="Idiomas">
  <ul>
    {
      languages.map(({ language, fluency }) => {
        return (
          <li>
            <header>
              <h3>{language}</h3>
              <p>{fluency}</p>
            </header>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  @import url("../../variables.css");

  * {
    /* border: 1px solid black; */
  }

  ul {
    display: flex;
    flex-direction: row;
    justify-content: start;
    flex-wrap: wrap;
    gap: 1rem;
  }

  li {
    flex: 1 0 calc(50% - 1rem);
    max-width: 50%;
  }

  header {
    border-radius: 8px;
    border: 1px solid var(--light);
    gap: 16px;
    display: flex;
    flex-direction: row;
    padding: 16px;
    height: 100%;
    margin: 0px;
  }

  p {
    display: flex;
    justify-content: center;
    align-items: end;
    font-size: 1rem;
    line-height: 1.2rem;
    padding-bottom: 0;
    bottom: 0;
  }
</style>
