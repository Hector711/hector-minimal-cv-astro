---
import Download from "@/icons/Download.astro";
import Sun from "@/icons/Sun.astro";
import Moon from "@/icons/Moon.astro";
import Search from "@/icons/Search.astro";
import SpainFlag from "@/icons/SpainFlag.astro";
import AmericaFlag from "@/icons/AmericaFlag.astro";


const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
import { languages } from '@/i18n/ui';
import { useTranslatedPath, useTranslations, getLangFromUrl } from "@/i18n/utils"
const translatePath = useTranslatedPath(lang)
---


<nav id="no-print">
  <!-- <div> -->

    <!-- Boton Download -->
    
    
    <!-- Boton Comandos -->
    
  <!-- </div> -->
  <div>
    <!-- boton Dark Mode -->

{
  Object.entries(languages).map(([langPrexif, label]) => {
    if(langPrexif == lang)  return <></>
    return (<a id="flags" href={translatePath('/', langPrexif)}><SpainFlag />{label}<AmericaFlag /></a>)
  })
}
  </div>
</nav>



<style>
  @import url("@/css/variables.css");

  * {
    /* border: 1px solid rgb(184, 9, 9); */
  }
  nav {
    box-shadow: var(--shadow-s);
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    height: 4rem;

    width: 100%;
    margin-inline: auto;

    transition: all 0.3s ease;
  }

  #flags {
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
  }

  #left {
    display: flex;
    gap: 2rem;
  }
  #right {
    display: flex;
    gap: 2rem;
  }

  a {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 10px;
    border: 1px solid var(--softGrey);
    padding: 0 10px;
    height: 35px;
    border-radius: 6px;
    transition: all 0.3s ease;
    width: 120px;
    font-size: 0.8rem;
    color: var(--softGrey)
  }

  a:hover {
    background: var(--light);
    border: 2px solid var(--softWhite);
  }

