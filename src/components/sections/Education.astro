  <ul>
    {
      education.map(({ name, institution, endDate, url }) => {
        return (
          <li>
            <article>
              <header>
                <div id="arrow">
                  <Arrow />
                </div>
                <h3>
                  {name}
                  <span id="lightWeight">en</span>
