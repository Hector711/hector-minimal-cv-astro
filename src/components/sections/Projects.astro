---
import Section from "../Section.astro";

import { getLangFromUrl, useTranslations } from "../../i18n/utils.ts";
const { currentLocale } = Astro
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);


import { getI18N } from "../../i18n/index"
const i18n = getI18N({ currentLocale })
const projects = i18n.projects
---

<Section title={t("section.projects")}>
  <ul>
    {
      projects.map(({ name, url, isActive, highlights, description }) => {
        return (
          <li>
            <a href={url} target="_blank" title={`Ver el proyecto ${name}`}>
                <header>
                  <h3>
                    {name}
                    {isActive && <span>&bull;</span>}
                  </h3>
                  <p>{description}</p>
                </header>
                <footer>
                  {highlights.map((highlight) => {
                    return <span>{highlight}</span>;
                  })}
                </footer>
            </a>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  @import url("../../variables.css");

  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  a {
    border-radius: 8px;
    border: 1px solid var(--light);
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
    transition: background 0.3s ease, border 0.3s ease;
  
  }

  a:hover {
    background: var(--light);
    border: 1px solid var(--softWhite);
  }

  a header {
    flex: 1;
  }
  a h3 {
    margin-bottom: 4px;
  }

  a p {
    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: 4px;
  }
  a h3 span {
    color: var(--green);
  }


  





  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.8rem;
  }

  footer span {
    border-radius: 6px;
    background: var(--light);
    color: var(--softGrey);
    font-size: 0.7rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
    display: inline-flex;
  }
</style>
